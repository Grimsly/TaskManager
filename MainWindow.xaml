<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="10">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="DateLabel" FontSize="20" Grid.Column="0"/>
                <Button Click="Add_Click" Content="+" FontSize="20" FontWeight="Bold" Grid.Column="1" BorderThickness="0" Background="Transparent"/>
            </Grid>
            <StackPanel x:Name="Tasks"  Margin="0, 20, 0, 0">
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
